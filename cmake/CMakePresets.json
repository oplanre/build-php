{
  "version": 2,
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default PHP configuration",
      "description": "Default PHP build using Unix Makefiles generator",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}"
    },
    {
      "name": "unix-full",
      "inherits": "default",
      "displayName": "PHP configuration with all extensions enabled",
      "description": "Default PHP build using Unix Makefiles generator",
      "generator": "Unix Makefiles",
      "cacheVariables": {
        "EXT_BCMATH": true,
        "EXT_BZ2": true,
        "EXT_CALENDAR": true,
        "EXT_CURL": true,
        "EXT_DL_TEST": true,
        "EXT_ENCHANT": true,
        "EXT_EXIF": true,
        "EXT_FFI": true,
        "EXT_FTP": true,
        "EXT_GD": true,
        "EXT_GD_AVIF": true,
        "EXT_GD_WEBP": true,
        "EXT_GD_JPEG": true,
        "EXT_GD_XPM": true,
        "EXT_GD_FREETYPE": true,
        "EXT_GD_JIS": true,
        "EXT_GETTEXT": true,
        "EXT_GMP": true,
        "EXT_INTL": true,
        "EXT_MBSTRING": true,
        "EXT_MYSQLND": true,
        "EXT_OPENSSL": true,
        "EXT_PCNTL": true,
        "EXT_PSPELL": true,
        "EXT_SHMOP": true,
        "EXT_SOAP": true,
        "EXT_SOCKETS": true,
        "EXT_SODIUM": true,
        "EXT_STANDARD_PASSWORD_ARGON2": true,
        "EXT_SYSVMSG": true,
        "EXT_SYSVSEM": true,
        "EXT_SYSVSHM": true,
        "EXT_TIDY": true,
        "EXT_XSL": true,
        "EXT_ZEND_TEST": true,
        "EXT_ZIP": true,
        "EXT_ZLIB": true,

        "SAPI_LITESPEED": true
      }
    },
    {
      "name": "ninja",
      "inherits": "unix-full",
      "displayName": "Ninja PHP configuration",
      "description": "Default PHP build using Ninja generator",
      "generator": "Ninja"
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "default"
    },
    {
      "name": "unix-full",
      "configurePreset": "unix-full"
    },
    {
      "name": "ninja",
      "configurePreset": "ninja"
    }
  ],
  "testPresets": [
    {
      "name": "default",
      "configurePreset": "default",
      "output": {"verbosity": "verbose"}
    },
    {
      "name": "unix-full",
      "configurePreset": "unix-full",
      "output": {"verbosity": "verbose"}
    },
    {
      "name": "ninja",
      "configurePreset": "ninja",
      "output": {"verbosity": "verbose"}
    }
  ]
}
