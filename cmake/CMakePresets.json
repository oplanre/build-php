{
  "version": 3,
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default PHP configuration",
      "description": "Default PHP build using Unix Makefiles generator",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}",
      "installDir": "/tmp"
    },
    {
      "name": "all-disabled",
      "inherits": "default",
      "displayName": "Basic PHP configuration",
      "description": "Basic PHP build using Unix Makefiles generator and only required extensions enabled",
      "cacheVariables": {
        "EXT_CTYPE": false,
        "EXT_DOM": false,
        "EXT_FILEINFO": false,
        "EXT_FILTER": false,
        "EXT_ICONV": false,
        "EXT_LIBXML": false,
        "EXT_OPCACHE": false,
        "EXT_PDO": false,
        "EXT_PDO_SQLITE": false,
        "EXT_PHAR": false,
        "EXT_POSIX": false,
        "EXT_SESSION": false,
        "EXT_SIMPLEXML": false,
        "EXT_SQLITE3": false,
        "EXT_TOKENIZER": false,
        "EXT_XML": false,
        "EXT_XMLREADER": false,
        "EXT_XMLWRITER": false
      }
    },
    {
      "name": "unix-full",
      "inherits": "default",
      "displayName": "PHP configuration with all extensions enabled",
      "description": "PHP build using Unix Makefiles generator and all extensions enabled",
      "cacheVariables": {
        "PHP_PEAR": true,

        "EXT_BCMATH": true,
        "EXT_BZ2": true,
        "EXT_CALENDAR": true,
        "EXT_CURL": true,
        "EXT_DBA": true,
        "EXT_DL_TEST": true,
        "EXT_ENCHANT": true,
        "EXT_EXIF": true,
        "EXT_FFI": true,
        "EXT_FTP": true,
        "EXT_GD": true,
        "EXT_GD_AVIF": true,
        "EXT_GD_WEBP": true,
        "EXT_GD_JPEG": true,
        "EXT_GD_XPM": true,
        "EXT_GD_FREETYPE": true,
        "EXT_GD_JIS": true,
        "EXT_GETTEXT": true,
        "EXT_GMP": true,
        "EXT_INTL": true,
        "EXT_LDAP": true,
        "EXT_LDAP_SASL": true,
        "EXT_MBSTRING": true,
        "EXT_MYSQLI": true,
        "EXT_MYSQL_SOCK": true,
        "EXT_MYSQLND": true,
        "EXT_OPCACHE_CAPSTONE": true,
        "EXT_OPENSSL": true,
        "EXT_PCNTL": true,
        "EXT_PDO_DBLIB": true,
        "EXT_PDO_FIREBIRD": true,
        "EXT_PDO_MYSQL": true,
        "EXT_PDO_PGSQL": true,
        "EXT_PGSQL": true,
        "EXT_PSPELL": true,
        "EXT_READLINE": true,
        "EXT_SHMOP": true,
        "EXT_SNMP": true,
        "EXT_SOAP": true,
        "EXT_SOCKETS": true,
        "EXT_SODIUM": true,
        "EXT_STANDARD_ARGON2": true,
        "EXT_SYSVMSG": true,
        "EXT_SYSVSEM": true,
        "EXT_SYSVSHM": true,
        "EXT_TIDY": true,
        "EXT_XSL": true,
        "EXT_ZEND_TEST": true,
        "EXT_ZIP": true,
        "EXT_ZLIB": true,

        "SAPI_FPM": true,
        "SAPI_FPM_SYSTEMD": true,
        "SAPI_FPM_ACL": true,
        "SAPI_FPM_APPARMOR": true,
        "SAPI_FPM_SELINUX": true,
        "SAPI_LITESPEED": true
      }
    },
    {
      "name": "unix-full-2",
      "inherits": "unix-full",
      "displayName": "PHP configuration with all extensions enabled with variations",
      "description": "PHP build with all extensions enabled and different variation of options set",
      "cacheVariables": {
        "PHP_DMALLOC": true,
        "PHP_DTRACE": true,

        "EXT_HASH_MHASH": true,
        "EXT_OPENSSL_KERBEROS": true,
        "EXT_OPENSSL_SYSTEM_CIPHERS": true,
        "EXT_PCRE_EXTERNAL": true,
        "EXT_SESSION_MM": true,
        "EXT_STANDARD_EXTERNAL_LIBCRYPT": true,
        "EXT_XML_EXPAT": true
      }
    },
    {
      "name": "ninja",
      "inherits": "unix-full",
      "displayName": "Ninja PHP configuration",
      "description": "Default PHP build using Ninja generator",
      "generator": "Ninja"
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "default"
    },
    {
      "name": "all-disabled",
      "configurePreset": "all-disabled"
    },
    {
      "name": "unix-full",
      "configurePreset": "unix-full"
    },
    {
      "name": "unix-full-2",
      "configurePreset": "unix-full-2"
    },
    {
      "name": "ninja",
      "configurePreset": "ninja"
    }
  ],
  "testPresets": [
    {
      "name": "default",
      "configurePreset": "default",
      "output": {"verbosity": "verbose"}
    },
    {
      "name": "all-disabled",
      "configurePreset": "all-disabled",
      "output": {"verbosity": "verbose"}
    },
    {
      "name": "unix-full",
      "configurePreset": "unix-full",
      "output": {"verbosity": "verbose"}
    },
    {
      "name": "unix-full-2",
      "configurePreset": "unix-full-2",
      "output": {"verbosity": "verbose"}
    },
    {
      "name": "ninja",
      "configurePreset": "ninja",
      "output": {"verbosity": "verbose"}
    }
  ]
}
