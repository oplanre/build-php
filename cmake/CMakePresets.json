{
  "version": 4,
  "include": [
    "cmake/presets/all-disabled.json",
    "cmake/presets/all-enabled.json"
  ],
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default PHP configuration",
      "description": "Default PHP configuration",
      "binaryDir": "${sourceDir}",
      "installDir": "/tmp"
    },
    {
      "name": "ninja",
      "inherits": "default",
      "displayName": "Ninja generator with default PHP configuration",
      "description": "Ninja generator with default PHP configuration",
      "generator": "Ninja"
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "default"
    },
    {
      "name": "ninja",
      "configurePreset": "ninja"
    }
  ],
  "testPresets": [
    {
      "name": "default",
      "configurePreset": "default",
      "output": {"verbosity": "verbose"}
    },
    {
      "name": "ninja",
      "configurePreset": "ninja",
      "output": {"verbosity": "verbose"}
    }
  ]
}
